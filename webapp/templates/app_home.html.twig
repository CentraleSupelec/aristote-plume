{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="h3 text-center mt-5 mb-3">{{ 'app_home.title' | trans }}</h1>
            {{ form_start(form) }}
            {{ form_row(form.requestedTopic) }}
            {{ form_row(form.requestedType) }}
            {{ form_row(form.requestedLanguage) }}
            {{ form_row(form.requestedLanguageModel) }}
            <div class="text-center mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-fw fa-search me-1"></i>
                    {{ 'article.form.submit' | trans }}
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
